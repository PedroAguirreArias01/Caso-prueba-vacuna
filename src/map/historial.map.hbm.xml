<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "//Hibernet/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="models.Historial" table="historial">
        <id column="id_persona" name="idPersona">
            <generator class="foreign">
                <param name="property">persona</param>
            </generator>
        </id>
        <property name="fechaCreacion" type="java.time.LocalDate">
            <column name="fecha_creacion"/>
        </property>
        <one-to-one name="persona" class="models.Persona" constrained="true"/>
        <set name="listaDosisAplicada" cascade="all" inverse="false">
            <key column="id_historial"/>
            <one-to-many class="models.DosisAplicada"/>
        </set>
    </class>
</hibernate-mapping>