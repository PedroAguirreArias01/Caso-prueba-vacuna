<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "//Hibernet/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="models.Persona" table="personas">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="documento" type="string">
            <column name="documento"/>
        </property>
        <property name="tipoDocumento" type="string">
            <column name="tipo_documento"/>
        </property>
        <property name="primerNombre" type="string">
            <column name="primer_nombre"/>
        </property>
        <property name="segundoNombre" type="string">
            <column name="segundo_nombre"/>
        </property>
        <property name="primerApellido" type="string">
            <column name="primer_apellido"/>
        </property>
        <property name="segundoApellido" type="string">
            <column name="segundo_apellido"/>
        </property>
        <property name="fechaNacimiento" type="java.time.LocalDate">
            <column name="fecha_nacimiento"/>
        </property>
        <property name="sexo" type="string">
            <column name="sexo"/>
        </property>
        <one-to-one name="historial" cascade="save-update" class="models.Historial"></one-to-one>
    </class>
</hibernate-mapping>