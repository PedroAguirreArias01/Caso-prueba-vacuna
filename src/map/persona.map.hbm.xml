<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "//Hibernet/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="models.Persona" table="personas">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="assigned"/>
        </id>
        <property name="documento" type="string">
            <column name="documento"/>
        </property>
        <property name="tipo_documento" type="string">
            <column name="tipo_documento"/>
        </property>
        <property name="nombres" type="string">
            <column name="nombres"/>
        </property>
        <property name="apellidos" type="string">
            <column name="apellidos"/>
        </property>
        <property name="fechaNacimiento" type="java.time.LocalDate">
            <column name="fecha_nacimiento"/>
        </property>
        <one-to-one name="historial" cascade="save-update" class="models.Historial"></one-to-one>
    </class>
</hibernate-mapping>